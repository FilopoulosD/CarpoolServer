<!--Ride Info-->
{{#each ride}}

    <div class="row">
        <p class="Montserrat text-center">
            Ride No {{{this.id}}}
        </p>
    </div>
    <div class="container-fluid marg0 pad0 ride-window">
        <div class="row marg0">
            <di class="col-6">
                <p class="Montserrat info-name">Date :</p>
            </di>
            <div class="col-6">
                <p class="Montserrat information">{{{this.timeAndDate}}}</p>
            </div>
        </div>
        <div class="row marg0">
            <div class="col-6">
                <p class="Montserrat info-name">Destination :</p>
            </div>
            <div class="col-6">
                <p class="Montserrat information">{{{this.destination}}}</p>
            </div>     
        </div>
        <div class="row marg0">
            <div class="col-6">
                <p class="Montserrat info-name">Starting Point:</p>
            </div>
            <div class="col-6">
                <p class="Montserrat information">{{{this.startingPoint}}}</p>
            </div>     
        </div>
        <div class="row marg0">
            <di class="col-6">
                <p class="Montserrat info-name">Cost:</p>
            </di>
            <div class="col-6">
                <p class="Montserrat information">{{{this.cost}}} &euro;</p>
            </div>
        </div>
{{/each}}
{{#each driver}}
        <div class="row marg0">
            <di class="col-6">
                <p class="Montserrat info-name">Driver Name:</p>
            </di>
            <div class="col-6">
                <a href="/profile/{{{this.id}}}" class="Montserrat information profiles">{{{this.name}}}</a>
            </div>
        </div>
{{/each}}
        <div class="row marg0">
            <div class="row marg0">
                <di class="col-6">
                    <p class="Montserrat info-name">Passenger Names:</p>
                </di>
                <div class="col-6">
                    {{#each passenger}}
                    
                    <a class="Montserrat information profiles" href="/profile/{{{this.id}}}">{{{this.name}}}</a> <br>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    </div>
